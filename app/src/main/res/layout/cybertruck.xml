<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal"
    android:background="@color/tesla">
    <ImageView
        android:layout_marginTop="0dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/cybertruck"
        android:adjustViewBounds="true"/>
    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="220dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="EXOSKELETON"/>
    <TextView
        android:gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="237dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="ULTRA-HARD 30X COLD-ROLLED STAINLESS STEEL"/>
    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="260dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="TESLA ARMOR GLASS"/>
    <TextView
        android:gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="277dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Ultra-strong glass and polymer-layered "/>
    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="305dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERSATILE UTILITY"/>
    <TextView
        android:gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="330dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="VERSATILE UTILITY"/>
    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="357dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="PERFORMANCE AND EFFICIENCY"/>
    <TextView
        android:gravity="center"
        android:textSize="10dp"
        android:textStyle="bold"
        android:textColor="@color/white"
        android:layout_marginTop="380dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Extraordinary traction control and torque"/>


    <TextView
        android:gravity="center"
        android:textSize="15dp"
        android:textStyle="bold"
        android:textColor="#FA2003"
        android:layout_marginTop="400dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:lines="7"
        android:text="Cybertruck is built with an exterior
        shell made for ultimate durability and passenger
        protection. Starting with a nearly impenetrable
        exoskeleton, every component is designed for superior
        strength and endurance, from Ultra-Hard 30X Cold-Rolled
        stainless-steel structural skin to Tesla armor glass." />

    <Button
        android:id="@+id/cyberButton"
        android:layout_marginLeft="115dp"
        android:layout_width="wrap_content"
        android:textColor="@color/black"
        android:layout_height="wrap_content"
        android:text="ORDER NOW for $20000"
        style="?attr/materialButtonOutlinedStyle"
        android:layout_marginTop="535dp"/>

</FrameLayout>
